@model IF6201_TomeYLleve.Models.ProductoModel
@{
    ViewData["Title"] = "Cliente";
    Layout = "_LayoutCLiente";
}

<div class="container">
    <div class="row">
        @foreach (ProductoModel tem in ViewBag.Producto)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="box-part text-center">
                    <div class="title">
                        <br>
                        <h4>@tem.nombre</h4>
                    </div>
                    <figure>
                        <a href='@Url.Action("producto", "Cliente", new { id = tem.id })'>
                            <img class="fit-image  rounded d-block m-l-none" src="~/img/@tem.foto" alt="Responsive image">
                        </a>
                    </figure>
                    <div class="caption">
                        <h3>
                            ₡@tem.precio
                        </h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
