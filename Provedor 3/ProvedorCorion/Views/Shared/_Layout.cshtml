@model ProvedorCorion.Models.ProductoModel
<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProvedorCorion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script>
        function eliminarProducto(idProducto) {
            var parametros = { "Id": idProducto };
            $.ajax(
                {
                    data: parametros,
                    url: '/Producto/EliminarProducto',
                    type: 'post',
                    success: function (response) {
                        location.reload();
                    }
                });
        }
        function actualizarProducto(idProducto) {
            var parametros = { "Id": idProducto };
            $.ajax(
                {
                    data: parametros,
                    url: '/Producto/ActualizarProducto',
                    type: 'post',
                    success: function (response) {
                        $('#info').html(response);
                    }
                });
        }
        function addTomeYLleve(idProducto) {
            var parametros = { "Id": idProducto };
            $.ajax(
                {
                    data: parametros,
                    url: '/TomeYLleve/addTomeYLleve',
                    type: 'post',
                    success: function (response) {
                        location.reload();
                    }
                });
        }
    </script>
    <style>
        .btn-secondary,
        .btn-secondary:hover,
        .btn-secondary:focus {
            color: #333;
            text-shadow: none; /* Prevent inheritance from `body` */
        }

        body {
            text-shadow: 0 .05rem .1rem rgba(0, 0, 0, .5);
            box-shadow: inset 0 0 5rem rgba(0, 0, 0, .5);
        }

        .mb-auto {
            margin-left: 25%;
        }

        .tomellevelogin {
            margin-left: 34%;
        }

        .busqueda {
            margin-top: -1em;
        }

        .table {
            color: rgba(255, 255, 255);
        }

        .btnTable {
            color: rgb(0 255 255);
        }

        .nav-masthead .nav-link {
            padding: .25rem 0;
            font-weight: 700;
            color: rgba(255, 255, 255, .5);
            background-color: transparent;
            border-bottom: .25rem solid transparent;
        }

        .nav-masthead .nav-link:hover,
        .nav-masthead .nav-link:focus {
            border-bottom-color: rgba(255, 255, 255, .25);
        }

        .nav-masthead .nav-link + .nav-link {
            margin-left: 1rem;
        }

        .nav-masthead .active {
            color: #fff;
            border-bottom-color: #fff;
        }
    </style>
</head>
<body class="d-flex h-100 text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
                <nav class="nav nav-masthead justify-content-center float-md-end navbar-expand-sm navbar-toggleable-sm navbar-light">
                    <a class="float-md-start mb-0" asp-area="" asp-controller="Home" asp-action="Index"><h3>Corion</h3></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" style="border-color:white">
                        <span class="navbar-dark navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="dropdown nav-item">
                                <a class="dropdown-toggle nav-link text-white" data-toggle="dropdown" href="#">Productos</a>
                                <ul class="dropdown-menu" style="background-color:transparent;border:none">
                                    <li>
                                        <a class="nav-link  dropdown-item text-white" asp-area="" asp-controller="Producto" asp-action="Registrar">Registrar</a>
                                    </li>
                                    <li>
                                        <a class="nav-link  dropdown-item text-white" asp-area="" asp-controller="Producto" asp-action="Listar">Listar</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Admi" asp-action="Login">Iniciar Sesion</a>
                            </li>
                            <li class="dropdown nav-item">
                                <a class="dropdown-toggle nav-link text-white" data-toggle="dropdown" href="#">Tome&Lleve</a>
                                <ul class="dropdown-menu" style="background-color:transparent;border:none">
                                    <li>
                                        <a class="nav-link text-white" asp-area="" asp-controller="TomeYLleve" asp-action="Login">Login</a>
                                    </li>
                                    <li>
                                        <a class="nav-link  dropdown-item text-white" asp-area="" asp-controller="TomeYLleve" asp-action="Listar">Agregar Producto</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="busqueda nav-item">
                                <form asp-controller="Producto" asp-action="NameSearch" method="post" enctype="multipart/form-data">
                                    <div class="row mx-4 mt-3">
                                        <input asp-for="Nombre" type="text" class="form-control text-center" onchange="submit" required id="Nombre" name="Nombre" placeholder="Nombre del producto">
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                </nav>
        </header>
        <main class="px-3">
            @RenderBody()
        </main>

        <footer class="mt-auto text-white-50">
            <div class="container">
                &copy; 2021 - ProvedorCorion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
