@model ProvedorCorion.Models.AdmiModel
@{
    ViewData["Title"] = "Login";
}

<form asp-action="LoginKey" method="post">
    <div class="row mx-4 mt-3">
        <div class="tomellevelogin col-md-4 text-center">
            <label for="inputEmail4" class="form-label">Contraseña</label>
            <input asp-for="Pass" type="password" class="form-control text-center" id="Pass" name="Pass" placeholder="Clave del proveedor">
        </div>
    </div>
    <div class="col-12 w-auto mx-3 text-center my-3">
        <button type="submit" class="btn btn-primary text-center mt-3">Iniciar Sesion</button>
        <button asp-action="GetKey" formmethod="post" class="btn btn-primary text-center mt-3">Solicitar Key</button>
    </div>
</form>