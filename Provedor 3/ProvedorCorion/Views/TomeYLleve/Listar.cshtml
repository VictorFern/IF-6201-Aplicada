@model ProvedorCorion.Models.ProductoModel
@{
    ViewData["Title"] = "Ver Productos";
}
<form asp-action="Update" method="post">
    <div id="info" class="text-center">

    </div>
</form>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Categoria</th>
        <th>Precio</th>
        <th>Dimensiones</th>
        <th>Descripcion</th>
        <th>Imagen</th>
        <th>Acciones</th>
    </tr>
    @foreach (ProductoModel temp in ViewBag.Productos)
    {
        <tr>
            <td>@temp.Id</td>
            <td>@temp.Nombre</td>
            <td>@temp.Marca</td>
            <td>@temp.Categoria</td>
            <td>@temp.Precio</td>
            <td>@temp.Dimensiones</td>
            <td>@temp.Descripcion</td>
            <td><img class="img-rounded img-hover mg-3" src="~/img/@temp.Foto" width="190" height="190"></td>
            <td>
                <a class="btnTable" type="button" href="javascript:;" onclick="addTomeYLleve(@temp.Id); return false;">Agregar a Tome&Lleve</a>
            </td>
        </tr>
    }
</table>
