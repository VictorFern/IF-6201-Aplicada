@model IF6201_TomeYLleve.Models.ProductoModel
@{
    ViewData["Title"] = "Buscar buscaEliminaActualiza";
    Layout = "_LayoutAdmin";
}
<div class="container">
    <div class="row">
        <div id="filtar" class="col-sm-12" style="margin-top: 100px;">
            <form name="buscar" asp-action="mostrarProducto" method="post">
                <input class="form-control" id="nombre" name="nombre" type="search" placeholder="Buscar producto" aria-label="Search" required />
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                    Buscar
                </button>
            </form>
        </div>
    </div>

</div>
