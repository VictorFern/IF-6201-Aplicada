<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IF6201_TomeYLleve</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstraps.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script type="text/javascript" charset="utf8" src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #C0C0C0;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Cliente" asp-action="Index"><img src="~/img/tome.png" height="36" alt="Responsive image"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <div class="navbar-nav align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark active" asp-area="" asp-controller="Cliente" asp-action="Index">Inicio</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-nav align-items-center">
                        <form class="form-inline my-2 my-lg-0" name="buscar" asp-action="buscar" method="post">
                            <input class="form-control" type="search" id="nombre" name="nombre" placeholder="Buscar producto" aria-label="Search" />
                            <button class="btn btn-outline-success" type="submit">Buscar</button>
                        </form>
                    </div>
                    <div class="navbar-nav navbar-right align-items-center">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="verCarrito">
                            <span class="number">@ViewBag.Cant</span>
                            <img class="img-fluid" src="~/img/shopping-cart.png" alt="cart" />
                            <span>Carrito</span>
                        </a>
                    </div>
                    <div class="navbar-nav navbar-right align-items-center">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="cerrarSesion">Cerrar Sesión</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid text-center p-3" id="p">
            <p>Tome&Lleve</p>
            <p>Página con fines educativo</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
